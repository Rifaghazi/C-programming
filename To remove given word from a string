#include <stdio.h>
#include <string.h>

int main() {
    char str[200], word[50];
    char result[200] = "";
    char *token;

    // Input the main string
    printf("Enter the string: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline added by fgets
    str[strcspn(str, "\n")] = '\0';

    // Input the word to remove
    printf("Enter the word to remove: ");
    scanf("%s", word);

    // Tokenize the string using space as delimiter
    token = strtok(str, " ");

    while (token != NULL) {
        // Compare token with word to remove
        if (strcmp(token, word) != 0) {
            strcat(result, token);
            strcat(result, " ");
        }
        token = strtok(NULL, " ");
    }

    printf("String after removing the word:\n%s", result);

    return 0;
}
